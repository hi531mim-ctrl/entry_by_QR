// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // Will fallback to DATABASE_URL if not found
  directUrl = env("POSTGRES_URL_NON_POOLING") // Required for Vercel Postgres
}

model Participant {
  id           String   @id @default(cuid())
  participantId String  @unique // PARTICIPANT_xxxxxxxxx
  name         String
  email        String
  grade        String
  notes        String?
  registeredAt DateTime @default(now())
  scanned      Boolean  @default(false)

  entryLogs    EntryLog[]

  @@index([participantId])
  @@index([email])
}

model EntryLog {
  id            String      @id @default(cuid())
  participantId String
  participant   Participant @relation(fields: [participantId], references: [participantId])
  scanDateTime  DateTime    @default(now())

  @@index([participantId])
  @@index([scanDateTime])
}
